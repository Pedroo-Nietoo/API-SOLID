{
  "compilerOptions": {
    "target": "es2020",                                  
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@lib*": ["src/lib/*"],
      "@controllers*": ["src/http/controllers/*"],
    },
  },
}
